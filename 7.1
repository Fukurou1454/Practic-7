#include "pch.h"
#include <iostream>
#include<string>
#include "windows.h"

using namespace std;

class Animal//Класс животное 
{
protected:
	string name;
	int year;
public:
	void set()
	{
		cout << "Введите имя:";
		cin >> name;
		cout << "Введите возраст:";
		cin >> year;
	}
	void out()
	{
		cout << "Я " << name << " мне " << year << endl;
	}
	virtual void golos() = 0;
};

class Cat : public Animal 
public:
	void golos()
	{
		cout << "мяу" << endl;
	}

};

class Dog : public Animal
{
public:
	void golos()
	{
		cout << "гав" << endl;
	}

};
class Parrot : public Animal
{
public:
	void golos()
	{
		cout << "кукареку" << endl;
	}

};

